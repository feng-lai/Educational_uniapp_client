.top {
	padding: 0 40rpx;
	position: fixed;
	width: 670rpx;
	left: 0;
	top: 0;
	z-index: 2;
	background-color: #fff;
}
.top .title{
	position: absolute;
	left: 0;
	width: 750rpx;
	text-align: center;
	font-size: 36rpx;
	font-weight: bold;
}
.top .title .back{
	position: absolute;
	left: 32rpx;
	top: 0;
}
.swiper{
	height: 200rpx;
}
.top .grade{
	margin-right: 160rpx;
}
.top .grade text{
	font-size: 24rpx;
	color:#434343;
	height: 22rpx;
	display: inline-block;
	vertical-align: bottom;
	margin-right: 9rpx;
	font-weight: bold;
}
.top .grade .img{
	width: 16rpx;
	height: 26rpx;
	vertical-align: middle;
	display: inline-block;
}
.top .grade image{
	width: 16rpx;
	height: 10rpx;
}
.banner {
	
	padding: 0 40rpx;
	padding-top: 28rpx;
	width: 670rpx;
	height: 200rpx;
}
.banner image {
	width: 670rpx;
	height: 200rpx;
}
.entry .row .title{
	height: 97rpx;
	line-height: 97rpx;
	padding: 0 32rpx;
	color:#ff2929;
	font-size: 36rpx;
	font-weight: bold;
}
.entry .row .title text{
	margin-left: 10rpx;
}
.entry .row .title image{
	width: 42rpx;
	height: 28rpx;
}
.entry .row .title .right{
	font-weight: 400;
	color:#8d8d90;
	font-size: 22rpx;
}
.entry .row .video{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	padding: 0 32rpx;
	-webkit-flex-wrap:wrap;
	        flex-wrap:wrap;
}
.entry .row .video .part{
	font-size: 24rpx;
	color:#434343;
	line-height: 35rpx;
	margin-left: 29rpx;
}
.entry .row .video .part:nth-child(1){
	margin-left: 0;
}
.entry .row .video .part .content{
	font-size: 20rpx;
	color:#999999;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.entry .row .video .part .titles{
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
	margin-top: 17rpx;
}
.entry .row .video .part .img{
	position: relative;
	width: 210rpx;
	height: 300rpx;
	border-radius: 15rpx;
}
.entry .row .video .part image{
	width: 210rpx;
	height: 300rpx;
	border-radius: 15rpx;
}
.entry .row .video .part .img .num{
	position: absolute;
	bottom: 12rpx;
	left: 15rpx;
	font-size: 20rpx;
	color:#ffffff;
	padding-left:24rpx ;
	background: url('https://www.51dgf.cn:9001/images/play.png') no-repeat left center;
	background-size: 14rpx 14rpx;
}

