page {
	background-color: #FFFFFF;
}
.top {
	padding: 0 40rpx;
	position: fixed;
	width: 670rpx;
	left: 0;
	top: 0;
	z-index: 3;
	background-color: #fff;
}
.top .left{
	position: relative;
}
.top .title text{
	color: #434343;
	font-size: 44rpx;
	vertical-align: bottom;
	display: inline-block;
	height: 44rpx;
}
.top .line text{
	font-size: 36rpx;
	margin: 0 14rpx;
	color:#e8e8e8;
	vertical-align: bottom;
	display: inline-block;
	height: 36rpx;
}
.top .address text{
	font-size: 22rpx;
	color:#434343;
	height: 22rpx;
	display: inline-block;
	vertical-align: bottom;
	margin-left: 7rpx;
}
.top .address .img{
	width: 20rpx;
	height: 26rpx;
	vertical-align: bottom;
	display: inline-block;
}
.top .address image{
	width: 20rpx;
	height: 26rpx;
}
.top .grade{
	margin-right: 160rpx;
}
.top .grade text{
	font-size: 22rpx;
	color:#434343;
	height: 22rpx;
	display: inline-block;
	vertical-align: bottom;
	margin-right: 9rpx;
}
.top .grade .img{
	width: 16rpx;
	height: 26rpx;
	vertical-align: middle;
	display: inline-block;
}
.top .grade image{
	width: 16rpx;
	height: 10rpx;
}
.banner {
	
	padding: 0 40rpx;
	padding-top: 28rpx;
	width: 670rpx;
	height: 200rpx;
}
.banner image {
	width: 670rpx;
	height: 200rpx;
}
.swiper{
	height: 200rpx;
}
.subject {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	text-align: center;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	padding: 0 80rpx;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	font-size: 24rpx;
	color: #434343;
	margin-top: 55rpx;
}
.subject .row {
	margin-right: 100rpx;
	margin-bottom: 20rpx;
}
.subject .row:nth-child(3n) {
	margin-right: 0;
}
.subject image {
	width: 125rpx;
	height: 125rpx;
}
.info {
	border-top: 20rpx solid #f8f8f8;
}
.option {
	height: 112rpx;
	line-height: 112rpx;
	text-align: center;
	background-color: #ffffff;
}
.option .left {
	width: 24.625%;
}
.option .line {
	width: 0.5%;
}
.option .left .row {
	display: inline-block;
	line-height: initial;
	vertical-align: middle;
	height: initial;
}
.option .left .row .title {
	font-size: 36rpx;
	color: #434343;
	height: 60rpx;
	line-height: 60rpx;
}
.option .left .row view text {
	font-size: 22rpx;
	color: #8d8d90;
	height: 34rpx;
	line-height: 34rpx;
	display: inline-block;
	vertical-align: middle;
	overflow: hidden;
}
.option .line text {
	vertical-align: middle;
	color: #dddddd;
}
.option .active .row .title {
	font-size: 36rpx;
	color: #46d17e;
	height: 60rpx;
	line-height: 60rpx;
}
.option .active .row view text {
	height: 34rpx;
	line-height: 34rpx;
	padding: 0 18rpx;
	background-color: #46d17e;
	color: #fff;
	font-size: 22rpx;
	border-radius: 5rpx;
	display: inline-block;
	vertical-align: middle;
}
.optionTop {
	position: fixed;
	top: -100%;
	left: 0;
	width: 100%;
	background-color: #ffffff;
	z-index: 2;
	-webkit-transition: top 0.5s;
	transition: top 0.5s;
}
.optionTops {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	background-color: #ffffff;
	z-index: 2;
	-webkit-transition: top 0.5s;
	transition: top 0.5s;
}
.entry {
	padding: 0 40rpx;
	margin-top: 30rpx;
}
.entry .row {
	height: 150rpx;
	margin-bottom: 30rpx;
}
.entry image {
	width: 264rpx;
	height: 150rpx;
	border-radius: 10rpx;
}
.entry .row>.left {
	width: 264rpx;
	height: 150rpx;
}
.entry .row>.right {
	width: 386rpx;
	height: 150rpx;
}
.entry .row>.right .title {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 3;
	overflow: hidden;
	font-size: 24rpx;
	color:#434343;
	line-height: 36rpx;
}
.entry .row>.right .title text{
	display: inline-block;
	height: 36rpx;
	padding:0 8rpx;
	background-color: #ff4040;
	color: #FFFFFF;
	line-height: 36rpx;
	border-radius: 5rpx;
	margin-right: 6rpx;
}
.entry .row>.right{
	position: relative;
}
.entry .row>.right .bottom{
	position: absolute;
	bottom: 0;
	width: 386rpx;
	left: 0;
	font-size: 20rpx;
	color:#c6c6c6;
	line-height: 34rpx;
}
.entry .row>.right .bottom .right{
	height: 34rpx;
	padding: 0 9rpx;
	background-color: #ffefef;
	color: #ff6565;
	line-height: 34rpx;
	border-radius: 5rpx;
}

